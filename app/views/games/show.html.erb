<div class="container">
  <h1 class="text-center white">GET READY TO HIT!!!</h1>

  <!-- request sent -->
  <% if @game.request.user == current_user %>
    <div class="row games-flex">
      <div class="col-md-3 from-left">
        <div class="background-color">
          <div class="card games-index">
            <div class="team-index-card">
              <div class="teams-index-name text-center">
                <p><%= link_to @game.request.team.league.name.upcase, team_path(@game.request.team) %></p>
                <p><%= link_to @game.request.team.name.upcase, team_path(@game.request.team) %></p>
              </div>
              <%= link_to team_path(@game.request.team) do %>
                <%= cl_image_tag @game.request.team.photo, class: "teams-index-photo" %>
              <% end %>
              <p class="teams-index-ranking text-center">
                #<%= @game.request.team.ranking %>
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card games-index no-background">
          <div class="team-index-card">
            <div class="teams-index-name text-center">
              <div class="star fade-star">
                <div class="scale-star">
                  <%= image_tag 'green_star.png', class: 'image' %>
                <div class= "centered">
                  <% if @game.request.at_home == false %>
                    <h2><%= current_user.team.league.city.upcase %></h2>
                    <h2><%= current_user.team.league.country.upcase %></h2>
                  <% else %>
                    <h2><%= current_user.team.league.city.upcase %></h2>
                    <h2><%= current_user.team.league.country.upcase %></h2>
                  <% end %>
                  <h2><%= @game.request.start_date.strftime('%a %d %b %Y') %></h2>
                </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-3 from-right">
        <div class="background-color">
          <div class="card games-index">
            <div class="team-index-card">
              <div class="teams-index-name text-center">
                <p><%= link_to @game.request.team.league.name.upcase, team_path(@game.request.team) %></p>
                <p><%= link_to @team.name.upcase, team_path(@team) %></p>
              </div>
              <%= link_to team_path(@team) do %>
                <%= cl_image_tag @team.photo, class: "teams-index-photo" %>
              <% end %>
              <p class="teams-index-ranking text-center">
                #<%= @team.ranking %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container message-container">
      <div class="message-form form-request-center">
        <%= render 'requests/form-message', request: @request, message: @message %>
      </div>
      <div class="chat-message">
        <div class="messages" id="messages">
          <% @request.messages.each do |message| %>
            <%= render 'requests/one-message', team: @team, message: message %>
          <% end %>
        </div>
      </div>
    </div>

  <!-- request received -->
  <% else %>
    <div class="row games-flex">
      <div class="col-md-3 from-left">
        <div class="background-color">
          <div class="card games-index">
            <div class="team-index-card">
              <div class="teams-index-name text-center">
                <p><%= link_to @team.league.name.upcase, team_path(@team) %></p>
                <p><%= link_to @team.name.upcase, team_path(@team) %></p>
              </div>
              <%= link_to team_path(@team) do %>
                <%= cl_image_tag @team.photo, class: "teams-index-photo" %>
              <% end %>
              <p class="teams-index-ranking text-center">
                #<%= @team.ranking %>
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card games-index no-background">
          <div class="team-index-card">
            <div class="teams-index-name text-center">
              <div class="star fade-star">
                <div class="scale-star">
                  <%= image_tag 'green_star.png', class: 'image' %>
                <div class= "centered">
                  <% if @game.request.at_home == false %>
                    <h2><%= current_user.team.league.city.upcase %></h2>
                    <h2><%= current_user.team.league.country.upcase %></h2>
                  <% else %>
                    <h2><%= current_user.team.league.city.upcase %></h2>
                    <h2><%= current_user.team.league.country.upcase %></h2>
                  <% end %>
                  <h2><%= @game.request.start_date.strftime('%a %d %b %Y') %></h2>
                </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-3 from-right">
        <div class="background-color">
          <div class="card games-index">
            <div class="team-index-card">
              <div class="teams-index-name text-center">
                <p><%= link_to @game.request.user.team.league.name.upcase, team_path(@game.request.user.team) %></p>
                <p><%= link_to @game.request.user.team.name.upcase, team_path(@game.request.user.team) %></p>
              </div>
              <%= link_to team_path(@game.request.user.team) do %>
                <%= cl_image_tag @game.request.user.team.photo, class: "teams-index-photo" %>
              <% end %>
              <p class="teams-index-ranking text-center">
                #<%= @game.request.user.team.ranking %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="container message-container">
      <div class="message-form form-request-center">
        <%= render 'requests/form-message', request: @request, message: @message %>
      </div>
      <div class="chat-message">
        <div class="messages" id="messages">
          <% @request.messages.each do |message| %>
            <%= render 'requests/one-message', team: @team, message: message %>
          <% end %>
        </div>
      </div>

    </div>

  <% end %>
</div>
