
<div class="container grid">
  <div class="card-category">
    <div class="card-img">
      <h2 class="text-center"><%= @team.name.upcase %></h2>
      <p><%= cl_image_tag(@team.photo, height: 250, width: 250,crop: :fill) %></p>
    </div>

    <div class="card-team-infos">
      <div class="team-content">
        <p><%= @team.league.name %></p>
        <p><%= @team.league.city %>, <%= @team.league.country %></p>
      </div>
      <div class="star-ranking">
        <p class="ranking"><%= @team.ranking %></p>
      </div>
    </div>
  </div>
  <% if @team.user %>
    <div class="contact-from">
      <% if @team.user.photo? %>
        <p><%= cl_image_tag(@team.user.photo, height: 50, width: 50,crop: :fill, class: 'avatar') %></p>
        <p>Contact: <%= @team.user.derby_name %></p>
      <% else %>
        <p><%= image_tag 'avatar.png', height: 50, width: 50,crop: :fill, class: 'avatar' %></p>
      <% end %>
      <p>Please contact <%= @team.user.derby_name %> to make a game request.</p>
    </div>

    <% if current_user != @team.user %>
      <div class="requesting-form text-center">
      <%#= render 'form', request: @request, team: @team %>


  <div class="container">
    <div class="form-container body">
      <div class="row form-center" >
          <%= simple_form_for ([@team, @request]) do |f| %>
            <div class="date-request">
              <%= f.input :start_date, as: :string, required: true, input_html: {class: "datepicker"} %>
              <%= f.input :end_date, as: :string, required: true, input_html: {class: "datepicker"} %>
            </div>
            <%= f.input :at_home, label: 'LOCATION', as: :radio_buttons, collection: [['0', "Home: #{current_user.team.league.city}, #{current_user.team.league.country}"], ['1', "Away: #{@team.league.city}, #{@team.league.country}" ]], label_method: :second, value_method: :first %>
            <%= f.simple_fields_for :message do |message| %>
              <%= message.input :content, label: "Message" %>
            <% end %>
            <%= f.button :submit, "Send Request",  class: 'my-btn' %>
          <% end %>
      </div>
    </div>
  </div>


    <% end %>
    <% else %>
      <p class="contact-from">No one has claimed this Team? Do you know them?</p>
  <% end %>

  </div>
</div>
