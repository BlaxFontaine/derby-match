<div class="sample-dashboard-center">
  <div class="row center-team-sample">
    <% teams.each do |team| %>
      <div class="col-xs-11 col-sm-11 col-md-11">
        <div class="card-dashboard team-dashboard hover-search">
          <div class="name-photo">
            <div class="logo-img-team">
              <%= cl_image_tag team.photo, class: "avatar-large avatar-margin" %>
            </div>
            <div class="team-index-card team-name-location">
              <p class="teams-index-name"><%= link_to team.league.name.upcase, team_path(team) %></p>
              <p><%= link_to team.name.upcase, team_path(team) %></p>
              <p class="team-index-location"><%= team.league.city %>, <%= team.league.country %></p>
            </div>
          </div>
          <div class="suggested-team-ranking">
            <p class="teams-index-ranking text-center"><span class="pink-ranking">#<%= team.ranking %></span></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
