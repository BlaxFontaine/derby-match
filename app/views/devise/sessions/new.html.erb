<div class="main-container">
  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://i.ytimg.com/vi/DNqTQ0dFnD8/maxresdefault.jpg');">
    <div class="banner-content">
      <div class="top-wrapper">
        <h1>Derby match</h1>
        <p>Find a team, play a game</p>
      </div>
      <div class="bottom-wrapper">
        <div class="form-container">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <h2 class="text-center">Log in</h2>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Log in", class: "my-btn" %>
            </div>
            <%= render "devise/shared/links" %>
          <% end %>
        </div>
      <div class="carousel-container">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100" src="<%= image_path 'dashboard.png'%>" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="<%= image_path 'search.png'%>" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="<%= image_path 'team.png'%>" alt="Third slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>





