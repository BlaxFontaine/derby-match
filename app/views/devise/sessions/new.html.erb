<div class="main-container">
  <div class="banner" style="background-image: linear-gradient(122.01deg, rgba(109, 33, 79, 0.5) 0%, rgba(179, 55, 113, 0.5) 100%), url('https://i.ytimg.com/vi/DNqTQ0dFnD8/maxresdefault.jpg');">
    <div class="top-btn text-center">
      <%= render "devise/shared/signup" %>
    </div>
    <div class="wrapper">
      <div class="info">
        <h1>Derby match</h1>
        <p>Find a <span class="green-text">team</span>, play a game</p>
      </div>
      <div class="form-container">
        <div class="bg-white">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <h2 class="text-center">Log in</h2>
          <div class="form-inputs">
            <%= f.input :email,
                        label: false,
                        required: false,
                        autofocus: true,
                        placeholder: "Email" %>
            <%= f.input :password,
                        label: false,
                        required: false,
                        placeholder: "Password" %>
            <%= f.input :remember_me, :as => :hidden, :value => true %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "LOG IN", class: "my-btn" %>
          </div>
        </div>
        <% end %>
        <div class="bg-transparent">
          <%= render "devise/shared/forgottenpw" %>
        </div>
      </div>
    </div>
  </div>
</div>





