<%= form_for(@user) do |f| %>
  <div class="form-group">
    <%= f.label :derby_name %>
    <%= f.text_field :derby_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>

    <div class="form-group">
    <%= f.label :photo %>
    <%= f.input :photo, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
