<div class="request-details">
  <div class="dates text-center">
    <p><%= request.start_date.strftime('%a %d %b %Y') %></p>
  </div>
  <div class="request-content">
    <div class="team">
      <p><%= request.user.team.league.name.upcase %><br><%= request.user.team.name %></p>
      <p>#<%= request.user.team.ranking %></p>
    </div>
    <div class="location">
      <p>
        <% if request.at_home == false %>
          <i class="fas fa-home"></i> <%= current_user.team.league.city %>, <%= current_user.team.league.country %>
        <% else %>
          <i class="fas fa-plane"></i> <%= request.team.league.city %>, <%= request.team.league.country %>
        <% end %>
      </p>
    </div>
    <div class="link">
      <p><%= link_to "GET MORE DETAILS", team_request_path(request.team, request), class:"my-btn" %></p>
    </div>
  </div>
</div>
